ORIG_PN="luafilesystem"
inherit lua

DESCRIPTION="Lua file system library"
HOMEPAGE="http://www.keplerproject.org/luafilesystem/"
SRC_URI="https://github.com/downloads/keplerproject/luafilesystem/${ORIG_PN}-${PV}.tar.gz"
PATCH_URI="1.5.0-cygwin.patch"

src_compile() {
	lndirs
	cd ${B}
	cygmake
}

src_test() {
	cd ${B}/src
	ln -sf lfs.so lfs.dll
	${LUA} -llfs ../tests/test.lua
}

src_install() {
	cd ${B}
	exeinto ${LUA_LIBDIR}
	newexe src/lfs.so lfs.dll
}

HTMLDOCS="doc/us/*"
