inherit lua

DESCRIPTION="Lua file system library"
HOMEPAGE="http://www.keplerproject.org/luafilesystem/"
SRC_URI="http://luaforge.net/frs/download.php/2679/${PN/-}-${PV}.tar.gz"
SRC_DIR="${PN/-}-${PV}"

src_compile() {
	lndirs
	cd ${B}
	cygmake LUA_INC=${LUA_INCLUDEDIR} LUA_LIBDIR=${LUA_LIBDIR}
}

src_test() {
	cd ${B}/src
	${LUA} -llfs ../tests/test.lua
}

src_install() {
	cd ${B}
	cyginstall LUA_LIBDIR=${D}${LUA_LIBDIR}
}

HTMLDOCS="doc/us/*"
